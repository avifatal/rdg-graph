{
    "compilerOptions": {
        "resolveJsonModule": true,
        "module": "esnext",
        "declaration": true,
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "lib": [
            "es2020"
        ],
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": "./",
        "incremental": true
    },
    "include": [
        "src/**/*.ts",
        "./migrations/**/*.ts"
    ],
}